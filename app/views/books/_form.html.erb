<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :author, style: "display: block" %>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.label :published, style: "display: block" %>
    <%= form.select :book_published_at_1i, options_for_select((Date.today.year - 100)..Date.today.year), { include_blank: "Select Year" } %>
    <%= form.select :book_published_at_2i, options_for_select(1..12), { include_blank: "Select Month" } %>
    <%= form.select :book_published_at_3i, options_for_select(1..31), { include_blank: "Select Day" } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
